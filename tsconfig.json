{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"]
    }
  },
  "include": ["src", "scripts"]
}
